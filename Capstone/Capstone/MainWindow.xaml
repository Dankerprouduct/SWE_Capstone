                    </Grid>

                    <!--Background="{DynamicResource BackgroundColor}"-->
                    <ScrollViewer Grid.Row="2" Background="Transparent">
                        <ListBox x:Name="ProductsList" ItemsSource="{Binding Products}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Stretch" ToolTip="{Binding Name}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="500"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                   TextTrimming="CharacterEllipsis" FontWeight="Bold" Grid.Row="0"
                                           TextWrapping="NoWrap" FontSize="15"/>
                                        <TextBlock  Grid.Column="1" FontSize="12" Text="{Binding Description}" Grid.Row="1"/>
                                        <TextBlock  Grid.Column="1" Text="{Binding Price}" Grid.Row="2" 
                                           FontStyle="Italic" Foreground="{DynamicResource PriceColor}" FontWeight="DemiBold"/>


                                        <Button Grid.RowSpan="3" Grid.Column="0" 
                                                HorizontalAlignment="Right"
                                                Tag="{Binding}" Click="SaveItem"
                                            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                            ToolTip="Save" Background="Transparent" BorderBrush="Transparent">
                                            <materialDesign:PackIcon
                                                Background="Transparent"
                                                Foreground="#9ae69a"
                                                Kind="BookmarkAdd" Width="20" Height="20"/>
                                        </Button
>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>



                    <Menu Grid.Row="1" VerticalAlignment="Top" Width="250" HorizontalAlignment="Right" Margin="180,0,0,0">
                        <MenuItem Header="Search Options" Width="250">
                            <MenuItem Header="Show search options here" >
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Setting 1"/>
                                    <CheckBox/>
                                </StackPanel>
                            </MenuItem>
                            <MenuItem Header="Range">
                                <WrapPanel Orientation="Vertical">
                                    <Label Content="Enter a range:"/>
                                    <WrapPanel Orientation="Horizontal">
                                        <TextBox Width="40"/>
                                        <Label Content=" - "/>
                                        <TextBox Width="40"/>
                                    </WrapPanel>
                                </WrapPanel>
                            </MenuItem>
                        </MenuItem>
                    </Menu>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Width="auto"
                        Height="auto">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center"
                            Kind="Bookmark" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="Items" />
                    </StackPanel>
                </TabItem.Header>
                <local:ItemsUserControl/>
            </TabItem> 
            <TabItem >
                <TabItem.Header>
                    <StackPanel
                        Width="auto"
                        Height="auto">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center"
                            Kind="InfoCircle" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="About" />
                    </StackPanel>
                </TabItem.Header>

                <Grid Background="#303030">
                    <StackPanel 
                        Margin="16">
                        <TextBlock
                            Margin="0,0,0,8"
                            Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                            Text="About" />
                        <TextBlock TextWrapping="Wrap">
                            <Run>
                                Buggy is a desktop price scraper application that finds the best deals for you across several major retailers. Retailers include Amazon, Costco, Target, Walmart, and eBay. 
                            </Run>
                            <LineBreak/>

                            We simplify bargain hunting by condensing product information into one, convenient place. 

                            <LineBreak/>
                            You can save products to get price drop notifications, look them up faster, and view a price history based on previous searches. 
                            <LineBreak/>
                            When you are ready to buy, simply click on the buy button and you will be directed to the vendor's page to check out. 
                        
                            <LineBreak/>
                            <LineBreak/>
                            Shop smarter with Buggy!
                        </TextBlock>
                    </StackPanel>
                </Grid>
               
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Width="auto"
                        Height="auto">
                        <materialDesign:PackIcon
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Center"
                            Kind="Cog" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            Text="Settings" />
                    </StackPanel>
                </TabItem.Header>
                <local:SettingsControl/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
